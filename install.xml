	<config group="template_autosales"
			name="template_social_y"
		    type="text" 
		    order="3035" 
		    show="template_social|1" 
		    description="You Tube Link">#</config>

	<config group="template_autosales" 
		    name="ckeditor_css" 
		    type="hidden" 
		    description="CKEditor CSS"
